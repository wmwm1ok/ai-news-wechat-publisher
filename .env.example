# DeepSeek API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# 微信公众号配置
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret

# Cloudflare Worker 代理（解决 GitHub Actions IP 变化问题）
# 可选：如果不配置，将直接调用微信 API（需要频繁更新 IP 白名单）
WECHAT_PROXY_URL=https://wechat-api-proxy.your-subdomain.workers.dev

# 可选：邮件通知配置
EMAIL_ENABLED=false
EMAIL_TO=your_email@example.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Serper API 配置（海外新闻搜索）
SERPER_API_KEY=your_serper_api_key

# 调试模式
DEBUG=false
