# DeepSeek API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# 微信公众号配置
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret

# Cloudflare Worker 代理（解决 GitHub Actions IP 变化问题）
# 可选：如果不配置，将直接调用微信 API（需要频繁更新 IP 白名单）
WECHAT_PROXY_URL=https://wechat-api-proxy.your-subdomain.workers.dev

# 邮件通知配置（推荐 Gmail）
# 发送给谁（默认：wmwm1ok@gmail.com）
EMAIL_TO=wmwm1ok@gmail.com

# SMTP 配置（以 Gmail 为例）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail@gmail.com
# Gmail 应用专用密码（不是邮箱密码）
# 获取方式：Google 账号 → 安全性 → 应用专用密码
SMTP_PASS=your_app_password

# Serper API 配置（海外新闻搜索）
SERPER_API_KEY=your_serper_api_key

# 调试模式
DEBUG=false
